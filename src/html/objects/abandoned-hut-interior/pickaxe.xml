<!DOCTYPE game-interactable SYSTEM "http://www.game-object.com/dtd/interactable">
<game-interactable
    id="pickaxe"
    class="object"
    cx="50%"
    cy="33%"
    width="15%"
>
    <game-data class="data">
        <game-data-action type="interact">
            <game-logic-action type="output">
                It might be useful.
            </game-logic-action>
            <game-logic-action type="trigger" value="pick-up"> </game-logic-action>
        </game-data-action>
        <game-data-action type="pick-up">
            <game-logic-action type="output">
                [Grab]
            </game-logic-action>
            <game-logic-action type="add-inventory" value="pickaxe"> </game-logic-action>
        </game-data-action>
        <game-data-action type="inspect">
            <game-logic type="sequence">
                <game-logic-action type="output">
                    A pickaxe.
                </game-logic-action>
                <game-logic-action type="output">
                    Old, not too heavy, but still sturdy.
                </game-logic-action>
                <game-logic-action type="output">
                    I should take it with me.
                </game-logic-action>
            </game-logic>
        </game-data-action>
    </game-data>
    <img
            class="image"
            src="./images/dummy.png"
            data-src="/assets/images/objects/dummy/dummy.png"
            alt=""
    />
    <object
            class="click-area"
            data="./images/dummy.png"
            data-data="/assets/images/objects/dummy/dummy.svg"
            type="image/svg+xml"
    > </object>
</game-interactable>
